{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourcesLocation": {
            "type": "string"
        },
        "company": {
            "type": "string"
        },
        "environment": {
            "allowedValues": [
                "dev", "stage", "live"
            ],
            "type": "string"
        },
        "context": {
            "type": "string"
        }
    },
    "variables": {
        "eventStoreAccountName":"[concat(parameters('company'), '-database-', parameters('environment'))]",
        "eventStoreDbName":"event-store",
        "eventStoreDbContainerName":"events",

        "storageAccountName" : "[concat(parameters('company'), 'storage', parameters('environment'))]",
        "applicationInsightsName": "[concat(parameters('company'), '-appinsights-', parameters('environment'))]",

        "cqrsServiceBusNamespaceName": "[concat(parameters('company'), '-servicebus-', parameters('environment'))]",
        "serviceBusContextTopic": "[concat(parameters('context'), '-', 'events')]",

        "serviceBusInfoNotificationQueue":"info-notifications",
        "serviceBusWarningNotificationQueue":"warning-notifications",
        "serviceBusErrorNotificationQueue":"error-notifications",

        "commandHandlerFunctionName":"[concat(parameters('company'), '-', parameters('context') , '-', parameters('environment'))]"
    },
    "resources": [
        {
            "type": "microsoft.insights/components",
            "apiVersion": "2015-05-01",
            "name": "[variables('applicationInsightsName')]",
            "location": "[parameters('resourcesLocation')]",
            "tags": {
                "[concat('hidden-link:', resourceId('Microsoft.Web/sites', variables('applicationInsightsName')))]": "Resource"
            },
            "properties": {
                "ApplicationId": "[variables('applicationInsightsName')]",
                "Application_Type": "web"
            },
            "kind":"web"
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "name": "[variables('storageAccountName')]",
            "location": "[parameters('resourcesLocation')]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "Storage"
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2018-02-01",
            "name": "[variables('commandHandlerFunctionName')]",
            "location": "[parameters('resourcesLocation')]",
            "sku": {
                "name": "Y1",
                "tier": "Dynamic"
            },
            "properties": {
                "name": "[variables('commandHandlerFunctionName')]",
                "computeMode": "Dynamic"
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[variables('commandHandlerFunctionName')]",
            "location": "[parameters('resourcesLocation')]",
            "kind": "functionapp",  
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('commandHandlerFunctionName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
            ],
            "properties": {
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('commandHandlerFunctionName'))]",
                "siteConfig": {
                "appSettings": [
                    {
                    "name": "AzureWebJobsStorage",
                    "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';EndpointSuffix=', environment().suffixes.storage, ';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2019-06-01').keys[0].value)]"
                    },
                    {
                    "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                    "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';EndpointSuffix=', environment().suffixes.storage, ';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2019-06-01').keys[0].value)]"
                    },
                    {
                    "name": "WEBSITE_CONTENTSHARE",
                    "value": "[toLower(variables('commandHandlerFunctionName'))]"
                    },
                    {
                    "name": "FUNCTIONS_EXTENSION_VERSION",
                    "value": "~3"
                    },
                    {
                    "name": "WEBSITE_NODE_DEFAULT_VERSION",
                    "value": "~14"
                    },
                    {
                    "name": "APPINSIGHTS_INSTRUMENTATIONKEY",
                    "value": "[reference(resourceId('microsoft.insights/components', variables('applicationInsightsName')), '2020-02-02-preview').InstrumentationKey]"
                    },
                    {
                    "name": "FUNCTIONS_WORKER_RUNTIME",
                    "value": "dotnet"
                    },
                    {
                    "name": "DOMAIN_CONTEXT",
                    "value": "[toLower(parameters('context'))]"
                    },
                    {
                    "name": "EVENTSTORE_DB_CONNECTION_STRING",
                    "value": "[listConnectionStrings(resourceId('Microsoft.DocumentDb/databaseAccounts', variables('eventStoreAccountName')), providers('Microsoft.DocumentDb','databaseAccounts').apiVersions[0]).connectionStrings[0].connectionString]"
                    },
                    {
                    "name": "EVENTSTORE_DB_NAME",
                    "value": "[variables('eventStoreDbName')]"
                    },
                    {
                    "name": "EVENTSTORE_CONTAINER_NAME",
                    "value": "[variables('eventStoreDbContainerName')]"
                    },
                    {
                    "name": "CONTEXT_SB_CONNECTION",
                    "value": "[listkeys(resourceId('Microsoft.ServiceBus/namespaces/authorizationRules', variables('cqrsServiceBusNamespaceName'), 'RootManageSharedAccessKey'), '2017-04-01').primaryConnectionString]"
                    },
                    {
                    "name": "CONTEXT_SB_TOPIC_NAME",
                    "value": "[variables('serviceBusContextTopic')]"
                    }
                ]
                }
            }
        },
        {   
            "apiVersion": "2017-04-01",
            "type": "Microsoft.ServiceBus/namespaces",
            "name":"[variables('cqrsServiceBusNamespaceName')]",
            "location":"[parameters('resourcesLocation')]",
            "sku": {
                "name": "Standard"
            },
            "properties": { },
            "resources": [ 
                { 
                    "apiVersion":"2017-04-01",
                    "type": "Microsoft.ServiceBus/namespaces/topics",
                    "name": "[concat(variables('cqrsServiceBusNamespaceName'), '/', variables('serviceBusContextTopic'))]",
                    "dependsOn": [
                        "[resourceId('Microsoft.ServiceBus/namespaces', variables('cqrsServiceBusNamespaceName'))]"
                    ],
                    "properties": {},
                    "resources": [
                        {
                            "apiVersion":"2017-04-01",
                            "type": "subscriptions",
                            "name":"context-event-handler",
                            "dependsOn":[
                                "[resourceId('Microsoft.ServiceBus/namespaces/topics', variables('cqrsServiceBusNamespaceName'), variables('serviceBusContextTopic'))]"
                            ],
                            "properties": {}
                        }
                    ]
                },
                {
                    "type": "Microsoft.ServiceBus/namespaces/queues",
                    "apiVersion":"2017-04-01",
                    "name":"[concat(variables('cqrsServiceBusNamespaceName'), '/', variables('serviceBusInfoNotificationQueue'))]",
                    "dependsOn": [
                        "[resourceId('Microsoft.ServiceBus/namespaces', variables('cqrsServiceBusNamespaceName'))]"
                    ]
                },
                {
                    "type": "Microsoft.ServiceBus/namespaces/queues",
                    "apiVersion":"2017-04-01",
                    "name":"[concat(variables('cqrsServiceBusNamespaceName'), '/', variables('serviceBusWarningNotificationQueue'))]",
                    "dependsOn": [
                        "[resourceId('Microsoft.ServiceBus/namespaces', variables('cqrsServiceBusNamespaceName'))]"
                    ]
                },
                {
                    "type": "Microsoft.ServiceBus/namespaces/queues",
                    "apiVersion":"2017-04-01",
                    "name":"[concat(variables('cqrsServiceBusNamespaceName'), '/', variables('serviceBusErrorNotificationQueue'))]",
                    "dependsOn": [
                        "[resourceId('Microsoft.ServiceBus/namespaces', variables('cqrsServiceBusNamespaceName'))]"
                    ]
                }
             ]
        }
        
    ],
    "outputs": {}
}